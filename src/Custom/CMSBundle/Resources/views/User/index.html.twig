{% extends '::base.html.twig' %}

{% block body -%}
  <h1>User list</h1>

  <table class= "records_list">
    <thead>
      <th>Id</th>
      <th>Username</th>
      <th>Password</th>
      <th>Actions</th>
    </thead>

  <tbody>
    {% for entity in entities %}
      <tr>
        <td>
          <a href="{{ path('cms_user_show', {'id': entity.id}) }}">{{ entity.id }}
          </a>
        </td>
        <td>{{ entity.username }}</td>
        <td>{{ entity.password | slice(0,20)  }}</td>
        <td>

        <ul>
          <li>
          <a href="{{ path('cms_user_show', {'id', entity.id}) }}">show</a>
           </li>

           <li>
           <a href=" path('cms_user_edit', {'id', entity.id })">edit</a>
            </li>

        </ul>
        </td >
      </tr>

  </tbody>
  </table>
